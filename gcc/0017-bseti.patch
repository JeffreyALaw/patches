+      /* And shift back right to put the bits into position.  */
+      count = clz_hwi (INTVAL (operands[2]));
+      x = gen_rtx_LSHIFTRT (GET_MODE (operands[0]),
+			    operands[0], GEN_INT (count));
+      emit_insn (gen_rtx_SET (operands[0], x));
