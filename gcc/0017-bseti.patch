+      rtx x = gen_rtx_LSHIFTRT (GET_MODE (operands[0]),
+				operands[1], GEN_INT (count));
+      emit_insn (gen_rtx_SET (operands[0], x));
+      x = gen_rtx_ASHIFT (GET_MODE (operands[0]),
+			  operands[0], GEN_INT (count));
+      emit_insn (gen_rtx_SET (operands[0], x));
+      return true;
